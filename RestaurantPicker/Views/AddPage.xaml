<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RestaurantPicker.Views.AddPage">
    <ContentPage.Content>
        <StackLayout Padding="20, 20">
            <Label Text="Restaurant Name" FontSize="Large" Margin="0, 40, 0, 15"/>
            <Border Stroke="gray" StrokeThickness="1">
                <Entry x:Name="txtName" IsTextPredictionEnabled="False"/>
            </Border>
            
            <Label Text="What Type of Restaurant is it?" FontSize="Large" Margin="0, 40, 0, 15"/>
            <Border Stroke="gray" StrokeThickness="1">
                <Entry x:Name="txtType" IsTextPredictionEnabled="False"/>
            </Border>
            
            <Button Text="Add Restaurant" Margin="0, 80, 0, 0" BackgroundColor="Crimson" Clicked="AddRestaurant_OnClicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>